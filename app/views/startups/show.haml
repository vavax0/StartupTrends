= render :partial => "layouts/header"

%div.jumbotron
	%div.container.show-view
		%h1= @startup.name
		%p=  @startup.short_description
		= image_tag("#{@startup.website_thumbnail(:big)}", class: "center-block img-rounded show-img")
		%h4.description.center-block= @startup.description.gsub(/(?:\n\r?|\r\n?)/, '<br>').html_safe

		%h3.tags Tagi:
		%h5.tags
			- @startup.tags.each do |tag|
				%a{ :href => tag_path(tag) }
					= "##{tag.name}"

		
		%a{ :href => @startup.website_url }
			%button.btn.btn-success.btn-lg.show-btn
				%i.fa.fa-align-justify.fa-external-link 
				OdwiedÅº
				
		%a{ :href => category_path(@startup.category) }
			%button.btn.btn-success.btn-lg.show-btn
				%i.fa.fa-align-justify.fa-bullseye
				= "#{@startup.category.name}"

		%p=  "Opublikowano: #{@startup.created_at.to_date}"

= render :partial => "category_startups"